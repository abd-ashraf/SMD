<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._11_1a_StaticFragmentExample.MyContactsMainActivity">

    <!--  name is used for dynamic fragment-->
    <fragment
        android:id="@+id/contactsFragment"
        class="com.example.smdlab._11_1a_StaticFragmentExample.Contacts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </fragment>

    <fragment
        android:id="@+id/contactsDetail"
        class="com.example.smdlab._11_1a_StaticFragmentExample.ContactsDetail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
    </fragment>

</LinearLayout>